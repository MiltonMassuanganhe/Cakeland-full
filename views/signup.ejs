<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cakelandy</title>
    <link rel="stylesheet" href="/css/output.css">
    <script src="//unpkg.com/alpinejs" defer></script>
</head>

<body>
    <div class="bg-bg_1 h-full font-subtitles">
        <!-- NAVIGATION BAR -->
        <div class="lg:p-4 p-1 lg:flex lg:justify-center lg:items-center"">
            <!-- DESKTOP NAVIGATION BAR -->
            <nav
                class="hidden lg:flex items-center justify-between flex-row absolute z-50 w-full px-8 h-16  ml-auto font-semibold">
                <a href="/"
                    class="mt-10 font-bold font-subtitles uppercase border-b-8 border-principal-100 text-principal-100 text-2xl hover:bg-principal-100 p-2 hover:text-white">
                    Cakelandy
                </a>

            </nav>

            <!-- MOBILE NAVIGATION BAR -->
            <nav class="relative sm:block w-full lg:hidden h-12 flex justify-between items-center bg-principal-100">
                <a href="/" class="text-white font-bold">
                    Cakelandy
                </a>
            </nav>
        </div>
        <!-- /NAVIGATION BAR -->

        <!-- <div class="p-4 lg:grid lg:justify-center lg:items-center"> -->
        <div class="p-0 text-xs lg:text-xl lg:flex lg:justify-center lg:items-center">
        <form action="/signup" method="post" class="space-y-2 lg:my-20 lg:grid p-3 border-2 border-principal-100">
            <h1
                class="text-center text-xl text-principal-100 font-semibold py-3 border-b-2 border-principal-100">
                SignUp Member
            </h1>
            <div class="grid grid-cols-1 lg:grid-cols-2 space-x-2">
                <div class="flex flex-col space-y-1 mt-0.5 lg:space-y-2 space-x-2">
                    <label class="text-white ml-2">
                        Nome
                    </label>
                    <input type="text" name="name" required class="p-2 rounded-md bg-white bg-opacity-40">
                </div>

                <div class="flex flex-col space-y-1 lg:space-y-2">
                    <label class="text-white">
                        Apelido
                    </label>
                    <input type="text" name="surname" required class="p-2 rounded-md bg-white bg-opacity-40">
                </div>

                <div class="flex flex-col space-y-1 lg:space-y-2">
                    <label class="text-white">
                        Username
                    </label>
                    <input type="text" name="username" required class="p-2 rounded-md bg-white bg-opacity-40">
                </div>
                    <div class="flex flex-col space-y-1 lg:space-y-2">
                        <label class="text-white">
                            Palavra-Passe
                        </label>
                        <input type="password" name="password" required class="p-2 rounded-md bg-white bg-opacity-40">
                    </div>

                    <div class="flex flex-col space-y-1 lg:space-y-2">
                        <label class="text-white">
                            Digite novamente a Palavra-Passe
                        </label>
                        <input type="password" name="confirmpassword" required class="p-2 rounded-md bg-white bg-opacity-40">
                    </div>

                <div class="flex flex-col space-y-1 lg:space-y-2">
                    <label class="text-white">
                        Email
                    </label>
                    <input type="email" required name="email" class="p-2 rounded-md bg-white bg-opacity-40">
                </div>
                <div class="flex flex-col space-y-1 lg:space-y-2">
                    <label class="text-white">
                        Telefone
                    </label>
                    <input type="text" required name="telephone" class="p-2 rounded-md bg-white bg-opacity-40">
                </div>

                <div class="flex flex-col space-y-2 text-white ">
                    <span>Tipo de Utilizador</span>
                    <select name="type" class="py-2 mt-auto rounded-md bg-white bg-opacity-40">
                        <option> Confeiteiro/a</option>
                        <option>Cliente</option>
                    </select>
                </div>
            </div>
            <div class="flex justify-center text-center items-center">
                <button type="submit"
                    class="w-1/2 p-2 rounded-md border border-principal-100 text-white bg-white bg-opacity-40 hover:bg-principal-100">
                    Submit
                </button>
            </div>

            </form>
        </div>
    </div>

</body>

</html>