<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cakelandy</title>
    <link rel="stylesheet" href="/css/output.css">
    <script src="//unpkg.com/alpinejs" defer></script>
    <!-- <script src="/app.js"></script> -->
</head>
<body>
    <div class="bg-bg_1 h-screen font-subtitles">
    <!-- NAVIGATION BAR -->
    <div class="">
        <!-- DESKTOP NAVIGATION BAR -->
        <nav class="hidden lg:flex items-center justify-between flex-row absolute z-50 w-full px-8 h-16  ml-auto font-semibold">
            <a href="/"
                class="font-bold font-subtitles uppercase border-b-8 border-principal-100 text-principal-100 text-2xl hover:bg-principal-100 p-2 hover:text-white">
                Cakelandy
            </a>
        
        </nav>
    
        <!-- MOBILE NAVIGATION BAR -->
        <nav class="relative sm:block lg:hidden h-12 flex justify-between items-center px-4 bg-principal-100">
            <a href="/" class="text-white font-bold">
                Cakelandy
            </a>
        </nav>
    </div>
    <!-- /NAVIGATION BAR -->

    <div class="p-4 lg:flex lg:justify-center lg:items-center">
        <form action="/login" method="post" class="space-y-6 lg:my-20 p-3 border-2 border-principal-100">

            <h1 class="text-center text-xl text-principal-100 font-semibold py-2 lg:py-5 border-b-2 border-principal-100">
                Login Member
            </h1>
            <div class="flex flex-col space-y-2">
                <label class="text-white">
                    Username
                </label>
                <input type="text" name="username" required class="p-2 rounded-md bg-white bg-opacity-40">
            </div>


            <div class="flex flex-col space-y-2">
                <label class="text-white">
                    Password
                </label>
                <input type="password" name="password" required class="p-2 rounded-md font-semibold bg-white bg-opacity-40">
            </div>

            
            <button type="submit" class="w-full p-2 rounded-md border border-principal-100 text-white bg-white bg-opacity-40 hover:bg-principal-100">
                Login
            </button>
            
            <div class="flex flex-col items-center space-y-4">
                <a href="#" class="text-sm text-white hover:text-indigo-300 hover:underline">
                    Forgot Password?
                </a>
                <div class="flex justify-center items-center space-x-2">
                    <span class="text-white">Not a Member?</span>
                    <a href="/signup" class="text-indigo-300 hover:underline">
                        SignUp
                    </a>
                </div>
            </div>
            
        </form>
    </div>
</div>

</body>
</html>